# ======= Geral =======
SEED=42
LOG_LEVEL=INFO

# ======= Data/Reports/Logs =======
DATA_DIR=data
REPORTS_DIR=reports
LOG_DIR=logs

# ======= Model artifacts =======
MODEL_PATH=app/model/model.joblib
MODEL_META_PATH=app/model/model_meta.json

# ======= Dataset =======
# Não assuma o nome do target — defina aqui ou via --target
TARGET_COLUMN=
# Opcional para split temporal:
TIME_COLUMN=
TEMPORAL_SPLIT=false

# ======= Split =======
TRAIN_SIZE=0.70
VAL_SIZE=0.15
TEST_SIZE=0.15

# ======= Preprocess =======
USE_SCALER=true
ADD_MISSING_FLAGS=false

# ======= Model selection =======
PRIMARY_METRIC_BINARY=roc_auc
PRIMARY_METRIC_MULTICLASS=f1_macro
THRESHOLD_STRATEGY=max_f1

# ======= API =======
API_VERSION=0.1.0
LOG_PREDICTIONS=false
